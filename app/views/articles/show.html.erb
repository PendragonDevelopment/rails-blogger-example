
<h1><%= @article.title %></h1>

<%= image_tag(@article.blog_image.url(:medium)) %>

<p><%= @article.body %></p>

<p>
  Tags:
  <% @article.tags.each do |tag| %>
    <%= link_to tag.name, tag_path(tag) %>
  <% end %>
</p>

<%= link_to "Edit Article", edit_article_path(@article), class: 'new_article' %>
<%= link_to "Delete Article #{@article.id}", article_path(@article), method: :delete, data: { confirm: "Are you sure you want to delete this article?" } %>
<%= link_to "Back to articles", articles_path, class: 'articles-index' %>